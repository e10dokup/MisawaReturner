<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:padding="10dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/img_contents"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="title"
        android:layout_marginLeft="20dp"
        android:id="@+id/text_contents"
        android:layout_alignTop="@+id/img_contents"
        android:layout_toEndOf="@+id/img_contents"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textSize="12sp"
        android:id="@+id/text_describe"
        android:layout_below="@+id/text_contents"
        android:layout_alignStart="@+id/text_contents"/>
</RelativeLayout>